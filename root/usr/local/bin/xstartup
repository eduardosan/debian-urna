#!/bin/bash
feh --bg-scale /opt/background.jpg
if /usr/sbin/dmidecode | grep -i product | grep VirtualBox
then
  xterm -e "echo 'VirtualBox detectado!

  Antes de prosseguir, conecte o teclado da urna na VM:
  dispositivos > USB > e clique no respectivo teclado.

  Habilite o segundo monitor (previamente configurado na VM):
  visualizar > tela virtual 2 > Habilitar.

  pressione qualquer tecla quando tudo estiver pronto...'; /bin/bash -c 'read -n1'"
fi
/usr/local/bin/keyboard-start
